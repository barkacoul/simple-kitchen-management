<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="list-group">
        
          <%= link_to "Dashboard", current_user, {class: "list-group-item active"} %>
          <%= link_to "Ingredients", ingredients_path, {class: "list-group-item"} %>
        
        
      </div>
        
        
        
    </div><!-- /.col-md-3 -->

    <div class="col-md-9">
      <nav class="navbar navbar-default">
        <div class="container">
          <div class="navbar-header">
            <a class="navbar-brand text-uppercase" href="#">
              Dashboard
            </a>
          </div>
        </div>
      </nav>
            
    <div class="panel panel-default">
    <div class="panel-heading">
        <strong>Add an ingredient</strong>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <%= form_for @ingredients do |f| %>
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        
                        <%= f.label :ingredient_name, :class=>"control-label col-md-3" %>
                        <div class="col-md-8">
                            <%= f.text_field :ingredient_name, :class=>"form-control"%>
                            
                        </div>
                    </div>

                    <div class="form-group">
                        <%=f.label :unit, :class=>"control-label col-md-3" %>
                      <div class="col-md-8">
                        <%= f.text_field :unit, :class=>"form-control" %>
                      </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :unit_cost, :class=>"control-label col-md-3"  %>
                        <div class="col-md-8">
                            <%= f.number_field :unit_cost, :class=>"form-control" %>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-offset-3 col-md-6">
                        <%= f.submit 'ADD', :class=>"btn btn-primary" %>
                        <%= button_tag "Reset", :type => 'reset', :class=>"btn btn-default" %>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                
                
                
            </div>
