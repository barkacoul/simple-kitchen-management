<!-- content -->
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="list-group">
        
          <%= link_to "Dashboard", current_user, {class: "list-group-item active"} %>
          <%= link_to "Ingredients", ingredients_path, {class: "list-group-item"} %>
        
      </div>
        
        
        
    </div><!-- /.col-md-3 -->

    <div class="col-md-9">
      <nav class="navbar navbar-default">
        <div class="container">
          <div class="navbar-header">
            <a class="navbar-brand text-uppercase" href="#">
              Dashboard
            </a>
          </div>
        </div>
      </nav>
      <div class="panel-body">
        <div class="form-horizontal">
          <div class="row">
            <div class="col-md-8">
            <table class="list-group">
              <tr>
                  <td><%= link_to new_ingredient_path do %>
                    <%= image_tag "ingredients.jpg", class: "list-group-item" %><% end %></td>

              </tr>
            </table>
                
            <br/><br/>
                
                <div class="col-lg-12 col-md-12 col-lg-12">
                    <div class="panel">
    <div class="panel-heading">
        <strong>List of Ingredients</strong>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
           
            <div class="row">
                <div class="col-lg-s12">
                    <div>
                        
                        <% if @ingredients.blank?  then %>
                        
                        <p>There are no stocked ingredients</p>
                            
                        <% else 
                        @ingredients.each{|i|
                            %>
                        
                        <table class="table">
                            
                            <thead>
                                <tr>
                            <td>Name</td>
                            <td>Unit</td>
                            <td>Unit Cost</td>
                                </tr>
                            </thead>
                            
                            <tbody>
                            <tr>
                                <td><%= i.ingredient_name %> </td>
                                <td><%= i.unit %></td>
                                <td><%= i.unit_cost %></td>
                                
                            </tr>
                            </tbody>
                        </table>
                        
                        <% }
                        end %>
                        
                        </div>
                    </div>
                
            </div>
                    
                    

            </div>
          </div>
        </div>
    </div>
  </div>
</div>
</div>