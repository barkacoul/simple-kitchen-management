<div class="container" style="margin-top:100px;">   <!-- main ocntainer -->
    
 <div class="panel panel-default">
    <div class="panel-heading">
        <strong>Register a Chef</strong>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <%= form_for @chef do |f| %>
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        
                        <%= f.label :first_name, :class=>"control-label col-md-3" %>
                        <div class="col-md-8">
                            <%= f.text_field :first_name, :class=>"form-control"%>
                            
                        </div>
                    </div>

                    <div class="form-group">
                        <%=f.label :last_name, :class=>"control-label col-md-3" %>
                      <div class="col-md-8">
                        <%= f.text_field :last_name, :class=>"form-control" %>
                      </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :email, :class=>"control-label col-md-3"  %>
                        <div class="col-md-8">
                            <%= f.email_field :email, :class=>"form-control" %>
                        </div>
                    </div>
                    
                    <div class="form-group">
                      <%=f.label :password, :class=>"control-label col-md-3" %>
                      <div class="col-md-8">
                        <%= f.password_field :password, :class=>"form-control" %>
                      </div>
                    </div>
                    
                     <div class="form-group">
                        <%= f.label :DOB, :class=>"control-label col-md-3"  %>
                        <div class="col-md-8">
                            <%= f.date_field :DOB, :class=>"form-control" %>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-offset-3 col-md-6">
                        <%= f.submit 'Register', :class=>"btn btn-primary" %>
                        <%= button_tag "Reset", :type => 'reset', :class=>"btn btn-default" %>
                        <% end %>
                    </div>
                    <%= link_to "Already member? Sign in here...", login_path %>
                </div>
            </div>
        </div>
    </div>
</div>

    
