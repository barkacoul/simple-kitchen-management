<!-- content -->

<div class="container" style="margin-top:30px;">
  <div class="row">
    <div class="col-md-3">
      <div class="list-group">
        
          <%= link_to "Dashboard", current1_user, {class: "list-group-item active"} %>
          <%= link_to "Recipes", recipes_path(@recipe), {class: "list-group-item"} %>
        
      </div>
        
        
        
    </div><!-- /.col-md-3 -->

    <div class="col-md-9">
      <nav class="navbar navbar-default">
        <div class="container">
          <div class="navbar-header">
            <a class="navbar-brand text-uppercase" href="#">
              Dashboard
            </a>
          </div>
        </div>
      </nav>
      <div class="panel-body">
        <div class="form-horizontal">
          <div class="row">
            <div class="col-md-8">
            <table class="list-group">
              <tr>
                  <td><%= link_to recipes_path do %>
                    <%= image_tag "recipes.jpg", class: "list-group-item" %><% end %></td>
                  <td><%= link_to new_recipe_path do %>
                      <%= image_tag "recipes.jpg", class: "list-group-item" %><% end %></td>
                  <td><%= link_to "#" do %>
                      <%= image_tag "ingredients.jpg", class: "list-group-item" %><% end %></td>
              </tr>
            </table>
                
            <br/><br/>
                
                <div class="col-lg-12 col-md-12 col-lg-12">
                    <div class="panel">
    <div class="panel-heading">
        <strong>List of Recipes</strong>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
           
            <div class="row">
                <div class="col-lg-s12">
                    <div>
                        
                        <% if @recipes.blank?  then %>
                        
                        <p>There are no created recipes</p>
                            
                        <% else 
                        @recipes.each{|r|
                            %>
                        
                        <table class="table">
                            
                            <thead>
                                <tr>
                            <td>Name</td>
                            <td>Portion Cost</td>
                            <td>Sub Cost</td>
                            <td>Waste Cost</td>
                            <td>Selling Price</td>
                                </tr>
                            </thead>
                            
                            <tbody>
                            <tr>
                                
                                <td><%= r.portion_cost %></td>
                                <td><%= r.sub_cost %></td>
                                <td><%= r.waste_cost %></td>
                                <td><%= r.selling_price %></td>
                                
                                
                            </tr>
                            </tbody>
                        </table>
                        
                        <% }
                        end %>
                        
                        </div>
                    </div>
                
            </div>
                    
                    

            </div>
          </div>
        </div>
    </div>
  </div>
