    <div class="panel panel-default">
    <div class="panel-heading">
        <strong>Add new recipe</strong>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <%= form_for @recipe do |f| %>
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        
                    <div class="form-group">
                        
                        <%= f.label :recipe_name, :class=>"control-label col-md-3" %>
                        <div class="col-md-8">
                            <%= f.text_field :recipe_name, :class=>"form-control"%>
                            
                        </div>
                    </div>
                        
                    <div class="form-group">
                        
                        <%= f.label :image, :class=>"control-label col-md-3" %>
                        <div class="col-md-8">
                            <%= f.file_field :image, :class=>"form-control"%>
                            
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :portion_cost, :class=>"control-label col-md-3"  %>
                        <div class="col-md-8">
                            <%= f.number_field :portion_cost, :class=>"form-control" %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.label :sub_cost, :class=>"control-label col-md-3"  %>
                        <div class="col-md-8">
                            <%= f.number_field :sub_cost, :class=>"form-control" %>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <%= f.label :waste_cost, :class=>"control-label col-md-3"  %>
                        <div class="col-md-8">
                            <%= f.number_field :waste_cost, :class=>"form-control" %>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <%= f.label :selling_price, :class=>"control-label col-md-3"  %>
                        <div class="col-md-8">
                            <%= f.number_field :selling_price, :class=>"form-control" %>
                        </div>
                    </div> <br/>
                        <div style="padding-left: 50px;">
                            <div class="form-group">
                            <h4>List of ingredients</h4>
                              <div style="padding-left: 100px;">  
                            <div class="col-md-8">
                                <%= f.fields_for :ingredients_recipes do |ing| %>
                                <%= render 'ingredients_recipe_fields', f: ing %>
                            <% end %>
                                <div class="links">
                                    <%= link_to_add_association "Add ingredient", f, :ingredients_recipes%>
                            </div>
                                </div>
                                </div>
                            
                        

                </div> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        
                    
    <div class="panel-footer">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-offset-3 col-md-6">
                        <%= f.submit 'Add', :class=>"btn btn-primary" %>
                        <%= button_tag "Reset", :type => 'reset', :class=>"btn btn-default" %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
