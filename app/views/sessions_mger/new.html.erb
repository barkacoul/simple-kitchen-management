<div class="container" style="margin-top:100px;">   <!-- main ocntainer -->
<div class="panel panel-default">
  <div class="panel-heading">
    <strong>Login as Stock Manager</strong>
  </div>
    
  <div class="panel-body">
    <div class="form-horizontal">
      <div class="row">
        <div class="col-md-8">
            
            <div>
                <%= flash[:error] %>
            </div>
            
            <%= form_for(:session, url: loginmanager_path) do |f| %>

          <div class="form-group">
              <%= f.label :email, :class=>"control-label col-md-3" %>
            <div class="col-md-8">
                <%= f.email_field :email, :class=>"form-control" %>
            </div>
          </div>

          <div class="form-group">
                  <%= f.label :password, :class=>"control-label col-md-3" %>
            <div class="col-md-8">
                <%= f.password_field :password, :class=>"form-control" %>
            </div>
          </div>          

        </div>

      </div>
    </div>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-md-8">
        <div class="row">
          <div class="col-md-offset-3 col-md-6">
            <%= f.submit 'Login', :class=>"btn btn-primary" %>
            <%= button_tag "Reset", :type => 'reset', :class=>"btn btn-default" %>
          </div>
            <%= link_to "Not a member yet? Click here to register.", new_stock_manager_path %>
        </div>
      </div>
    </div>
  </div>
    <% end %>
</div>
